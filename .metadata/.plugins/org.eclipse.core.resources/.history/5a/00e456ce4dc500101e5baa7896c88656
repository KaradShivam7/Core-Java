package array_questions;

public class sixth {

	public static void main(String[] args) {
		int arr[]= {10,29,35,56,568,75,25,754};
		
		System.out.println("even numbers of an array");
		for(int i=0; i<arr.length;i++) {
			if(arr[i]%2==0) {
				System.out.print(arr[i]+ " ");
			}
		}
		System.out.println(" ");
		System.out.println("********************************");
		
		System.out.println("odd numbers of an array");
		for(int i=0; i<arr.length;i++) {
			if(arr[i]%2!=0) {
				System.out.print(arr[i]+ " ");
			}
		}
	}

}
